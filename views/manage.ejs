<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage</title>
    <style>
        th,td{
            margin: 10px;
            padding: 10px;
        }
    </style>
</head>
<body>
    <h1>Manage other users</h1>
    <h3>users:</h3>
    <table>
        <tr>
            <th>username</th>
            <th>role</th>
            <th>action
            </th>

        </tr>
        <% for(var i = 0; i < data.length; i++){ %>
            <% if(data[i].is_deleted == false){ %>
                <tr>
                    <td><%=data[i].username %></td>
                    <td><%= data[i].role %></td>
                    <td><a href="/delete/<%=data[i].username %>">Delete</a></td>
                </tr>
            <% } %>
        <% } %>
    </table>


    <h3>deletion waiting for confirmation:</h3>
    <table>
        <tr>
            <th>username</th>
            <th>role</th>
            <th>action
            </th>

        </tr>
        <% for(var i = 0; i < data.length; i++){ %>
            <% if(data[i].is_deleted == true){ %>
                <tr>
                    <td><%=data[i].username %></td>
                    <td><%= data[i].role %></td>
                    <td><a href="/permanentdelete/<%=data[i].username %>">Delete</a></td>
                </tr>
            <% } %>
        <% } %>
    </table>
    <br><br><br>
    <a href="/"><button>Home</button></a>
    
</body>
</html>